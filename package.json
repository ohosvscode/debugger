{
  "name": "@arkts/debugger",
  "type": "module",
  "version": "0.0.2-alpha.1",
  "packageManager": "pnpm@10.28.2",
  "description": "Debugger for ArkTS",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./ws": {
      "types": {
        "import": "./dist/ws.d.mts",
        "require": "./dist/ws.d.cts"
      },
      "import": "./dist/ws.mjs",
      "require": "./dist/ws.cjs"
    },
    "./vscode": {
      "types": {
        "import": "./dist/vscode.d.mts",
        "require": "./dist/vscode.d.cts"
      },
      "import": "./dist/vscode.mjs",
      "require": "./dist/vscode.cjs"
    },
    "./bin": {
      "types": {
        "import": "./dist/bin.d.mts",
        "require": "./dist/bin.d.cts"
      },
      "import": "./dist/bin.mjs",
      "require": "./dist/bin.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.cts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown --format esm,cjs src/index.ts src/ws.ts src/vscode.ts src/bin.ts",
    "watch": "tsdown --format esm,cjs --watch src/index.ts src/ws.ts src/vscode.ts src/bin.ts",
    "test": "vitest --coverage --ui --globals"
  },
  "dependencies": {
    "@changesets/cli": "^2.29.8",
    "@jridgewell/source-map": "^0.3.11",
    "@types/ws": "^8.18.1",
    "@vscode/debugadapter": "^1.68.0",
    "@vscode/debugadapter-testsupport": "^1.68.0",
    "@vscode/debugprotocol": "^1.68.0",
    "consola": "^3.4.2",
    "json5": "^2.2.3",
    "kleur": "^4.1.5",
    "mitt": "^3.0.1",
    "vitest": "^4.0.17",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@types/vscode": "^1.108.1",
    "@vitest/coverage-v8": "4.0.17",
    "@vitest/ui": "4.0.17",
    "eslint": "^9.39.2",
    "pnpm": "^10.28.2",
    "tsdown": "^0.20.0-beta.4",
    "typescript": "^5.9.3"
  }
}
